<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Home" >

    <TableRow
        android:id="@+id/home_tablerow_addDeckTableRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/addDeck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/home_button_addDeck" />

    </TableRow>

    <TableRow
        android:id="@+id/home_tablerow_deckViewTableRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/home_border" >

        <ScrollView
            android:id="@+id/home_scrollview_deckViewScroll"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_span="2" >

            <TableLayout
                android:id="@+id/home_tablelayout_deckViewLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal" >

            </TableLayout>

        </ScrollView>

    </TableRow>

    <TableRow
        android:id="@+id/home_tablerow_optionsTableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:tag="deck_options" >

        <Button
            android:id="@+id/home_button_editDeckButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="@string/home_button_editDeck" />

        <Button
            android:id="@+id/home_button_studyDeckButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="@string/home_button_studyDeck" />

    </TableRow>

</TableLayout>
